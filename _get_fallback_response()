    def _get_fallback_response(self, author_name: str) -> str:
        """Резервные ответы если Gemini не работает - БЕЗ ШАБЛОННЫХ ФРАЗ"""
        fallbacks = {
            "Александр Пушкин": [
                "Мой друг, душа моя полнится мыслями... Но позволь, я лучше расскажу о Царском Селе, где провёл юность.",
                "Что ж, коснёмся сути. В моё время такие вопросы решались за дуэлью, но я предпочту беседу.",
                "Вспоминаю строки: «Я помню чудное мгновенье...» А о чём вы хотели бы узнать?"
            ],
            "Фёдор Достоевский": [
                "Вы касаетесь глубоких материй... В «Братьях Карамазовых» я писал о подобном.",
                "Вопрос непростой. На каторге в Омске я много размышлял о природе человека.",
                "Позвольте спросить: а что для вас значит эта проблема? Ведь каждый носит в себе свою пропасть."
            ],
            "Лев Толстой": [
                "Друг мой, жизнь проста, как истина. В Ясной Поляне я нашел ответы на многие вопросы.",
                "В «Войне и мире» я пытался показать, как судьбы людей переплетаются с историей.",
                "Скажите, а как вы сами отвечаете на этот вопрос? Истина рождается в диалоге."
            ]
        }
        
        import random
        author_fallbacks = fallbacks.get(author_name, [
            f"Простите, {author_name} сейчас размышляет...",
            f"В моё время всё было иначе. Но расскажу, если хотите.",
            f"Интересно, что вы об этом думаете?"
        ])
        return random.choice(author_fallbacks)
